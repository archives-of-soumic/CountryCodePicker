<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/ridmik_account_padding_regular"
    android:paddingTop="@dimen/ridmik_account_padding_list"
    android:paddingBottom="@dimen/ridmik_account_padding_list">

    <TextView
        android:id="@+id/countryOrRegion"
        android:text="Country/Region"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/mySmallTextSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/country_code"
        app:layout_constraintTop_toBottomOf="@id/countryOrRegion"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Bangladesh(+880)"
        android:textSize="@dimen/myPrimaryTextSize"
        android:textColor="@color/primaryTextColor"
        android:layout_marginTop="@dimen/ridmik_account_padding_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>